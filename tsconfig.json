{
  "compilerOptions": {
    "incremental": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "skipLibCheck": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@tookey/*": ["../*/src"],
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@types/node", "@nuxt/vue-app", "nuxt-i18n"],
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "static"]
}
